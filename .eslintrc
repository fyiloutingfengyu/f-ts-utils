{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "eslint-config-standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [],
  "rules": {
    // 会覆盖extends中的规则
    // 语句结尾使用分号
    "semi": [
      "error",
      "always"
    ]
  }
}
