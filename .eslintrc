{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "eslint-config-standard",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    // 会覆盖extends中的规则
    // 语句结尾使用分号
    "semi": [
      "error",
      "always"
    ]
    // 不符合prettier的代码报eslint错误
    // "prettier/prettier": "error"
  }
}
